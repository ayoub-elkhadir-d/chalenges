// Online C compiler to run C program online

void main() {
#include <stdio.h>

int num;
int sum =0;
 printf("enter num : ");
 scanf("%d",&num);
 for(int a =0;a <=num;a++){
     sum=sum +=a;
    
     
 }
    printf("%d",sum);
    
 
}

