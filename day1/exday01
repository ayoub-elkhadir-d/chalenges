// Online C compiler to run C program online

void main() {
#include <stdio.h>

int num;
 printf("enter num : ");
 scanf("%d",&num);
 for(int a =0;a <=10;a++){
     
     printf("%d * %d = %d \n",a,num,a*num);
     
 }
    
    
 
}
