// Online C compiler to run C program online
#include <stdio.h>
void main() {
    int a ,b;
    
    printf("enter a ; ");
    scanf("%d",&a);
    printf("enter b ; ");
    scanf("%d",&b);
    
printf("a + b = %d \n a - b = %d \n a * b = %d \n a / b = %d ",a+b,a-b,a*b,a/b);
  
}


