// Online C compiler to run C program online

void main() {
#include <stdio.h>


    int num;
    printf("enter num : ");
    scanf("%d",&num);
    if(num == 0){
        printf("number 0");
    }
   if(num > 0){
        printf("positif");
    }
    if(num < 0){
        printf("negatif");
    }
}




