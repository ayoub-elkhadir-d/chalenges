// Online C compiler to run C program online
#include <stdio.h>
void main() {
    float c ;
  
    printf("enter C ; ");
    scanf("%f",&c);
    
if(c < 0){
    printf("solid");
}else if (c >= 0 && c<100){
    printf("liquide");
}
else{
    
    printf("gaz");
}
    
  
}



