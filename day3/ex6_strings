#include <stdio.h>
#include <string.h>
void main()
{
	char str[100];

	char character;
	int size;
	int y;
	printf("enter Chaînes de Caractères  : ");
	scanf("%s", str);
	printf("enter Caractèr   : ");
	scanf(" %c", &character);
	
	

	for (y = 0; str[y] != '\0' ; y++)
	{
		if(str[y] ==character){
			
			
			size++;
			}
	}
	printf("total : %d  ", size);
}
